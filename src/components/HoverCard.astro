---
interface Props {
  heading: string;
  backgroundSrc: string;
  description: string;
  cards: string[];
}
const props = Astro.props;
---

<div aria-label="Web3 ecosystems">
  <div
    class="h-96 border rounded-3xl border-gray-700/70 overflow-hidden group relative"
  >
    <div class="relative p-10 text-heading z-10">{props.heading}</div>
    <img
      class="object-cover group-hover:opacity-50 opacity-0 transition-opacity duration-500 absolute top-0"
      src={props.backgroundSrc}
    />
    <div aria-label="description" class="flex gap-10">
      <div class="text-heading-description py-2 px-10 max-w-xl">
        {props.description}
      </div>
      <div class="flex flex-col gap-1">
        {
          props.cards.map((card) => (
            <div class="border rounded-3xl border-zinc-700/50 bg-zinc-800 p-0.5 px-2.5 w-fit">
              {card}
            </div>
          ))
        }
      </div>
